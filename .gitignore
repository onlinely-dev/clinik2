# Исключаем настройки PHPStorm
/.idea

# сервисные скрипты битрикса
/restore.php
/bitrix_server_test.php

# Исключаем папку /bitrix кроме некоторых подпапок
!/bitrix
/bitrix/*

# оставляем печатные формы интернет-магазина
!/bitrix/admin/
/bitrix/admin/*
!/bitrix/admin/reports/

# оставляем нестандартные компоненты
!/bitrix/components/
/bitrix/components/aspro/
/bitrix/components/centino/
/bitrix/components/bitrix/

# оставляем модули aspro, centino, так как в них могут быть кастомные классы и обработчики
!/bitrix/modules/
/bitrix/modules/*
!bitrix/modules/aspro.*/
!bitrix/modules/centino.*/

# сохраняем весь php_interface за редкими исключениями
!/bitrix/php_interface/
/bitrix/php_interface/dbconn.ph*
/bitrix/php_interface/after_connect*
/bitrix/php_interface/logs/

# сохраняем шаблоны сайта
!/bitrix/templates/

# исключаем загружаемые файлы
/upload/

# исключаем десктопное приложение
/desktop_app/

# исключаем резервную копию сайта и скрипты после миграции
/backup_site*/
/migratsiya-hit/

# исключаем регионы
/*_regions/

